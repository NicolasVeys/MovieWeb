@model IEnumerable<MovieApp.Models.MovieListViewModel>

@if (Model.Count() == 0)
{
    <p>Er zijn geen film geregistreerd</p>
}
else
	{
<table>
    <thead>
        <tr>
            <th>Title</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @movie.Title <a asp-controller="Movie" asp-action="Detail" asp-route-id="@movie.Id"> Movie details</a>
                </td>
                <td>
                    <a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id">Edit movie</a>
                </td>
            </tr>
        }
    </tbody>
</table> 
	}
