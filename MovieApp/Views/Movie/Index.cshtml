@model IEnumerable<MovieApp.Models.MovieListViewModel>

@if (Model.Count() == 0)
{
    <p>Er zijn geen film geregistreerd</p>
}
else
	{
<table>
    <thead>
        <tr>
            <th>Title</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title </td>
                <td>
                    <button  class="btn btn-secondary"><a class="text-white" asp-controller="Movie" asp-action="Detail" asp-route-id="@movie.Id"> Movie details</a></button>
                </td>
                <td>
                    <button class="btn btn-secondary"><a class="text-white" asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id"> Edit movie</a></button>
                </td>
                <td>
                    <button class="btn btn-secondary"><a class="text-white" asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id"> Remove movie</a></button>
                </td>
            </tr>
        }
    </tbody>
</table> 
	}
